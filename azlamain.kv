<AzlaMain>:
    orientation: 'vertical'
    spacing: 40

    GridLayout:
        cols: 1
        spacing: 5

        Image:
            source: 'images/flag.jpg'

        Button:
            id: dropdown_word
            text: 'Choose WordList'
            on_release: root.open_dropdown_word(self)
            font_size: 25

        Button:
            text: 'Start'
            on_press: root.start_button_pressed(self)
            font_size: 25

        Button:
            text: 'Exit'
            on_press: root.exit_button_pressed(self)
            font_size: 25

    # Add other widgets and layouts here as required
    # ...

<DropdownItem@Button>:
    size_hint_y: None
    height: '30dp'

